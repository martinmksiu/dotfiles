{
    "title": "Back and Forward in qutebrowser using mouse buttons",
    "rules": [
        {
            "description": "Mouse button4 → H",
            "manipulators": [
                {
                    "from": {
                        "pointing_button": "button4"
                    },
                    "to": [
                        {
                            "key_code": "h",
                            "modifiers": [
                                "left_shift"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "org.qt-project.Qt.QtWebEngineCore"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Mouse button5 → L",
            "manipulators": [
                {
                    "from": {
                        "pointing_button": "button5"
                    },
                    "to": [
                        {
                            "key_code": "l",
                            "modifiers": [
                                "left_shift"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "org.qt-project.Qt.QtWebEngineCore"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
